<h5>Notes</h5>
<% @notes.each do |note| %>
  <div class="note">
    <div class="note-header">
      <p class="note-author"><%= note.craftsman %> Â· <%= note.updated_at %><p>
      <% if note.created_by?(@current_user) %>
        <%= link_to "Edit", note_path(note.id), :class => 'edit-note button small secondary' %>
      <% end %>
    </div>
    <div class="note-body">
      <%= note.body %>
    </div>
  </div>
<% end %>
